<Project>

  <!-- source line mappings are not supported in portable pdb format yet (https://github.com/dotnet/core/blob/master/Documentation/diagnostics/portable_pdb.md) -->
  <PropertyGroup>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <EmbedAllSources>true</EmbedAllSources>
    <AssemblyConfiguration></AssemblyConfiguration>
    <AssemblyCompany>Iulian Margarintescu @ Erata.NET, The Recognos Metrics.NET Team</AssemblyCompany>
    <AssemblyProduct>Metrics.NET</AssemblyProduct>
    <AssemblyCopyright>Copyright Iulian Margarintescu, The Recognos Metrics.NET Team Â© 2016</AssemblyCopyright>
    <AssemblyVersion>0.4.7</AssemblyVersion>
    <AssemblyFileVersion>0.4.7</AssemblyFileVersion>
    <AssemblyInformationalVersion>0.4.7</AssemblyInformationalVersion>
  </PropertyGroup>

  <!-- include pdbs into nuget package -->
  <PropertyGroup>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

</Project>